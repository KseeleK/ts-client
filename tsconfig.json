{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "build/",
    "sourceRoot": "src/",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    // "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./build/**/*"
  ]
}